{
  "version": "0.4.0",
  "ignoreChanges": [
    "*.spec.*",
    "*.md"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "next",
        "canary",
        "canary-extended"
      ],
      "message": "Publish %s"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
